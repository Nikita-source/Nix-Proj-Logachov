<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <property name="HOME_LOG" value="logs"/>
    <property name="ARCHIVED_LOG" value="archived"/>

    <appender name="JpaServiceLOGS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HOME_LOG}/JpaServiceLOGS.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${HOME_LOG}/${ARCHIVED_LOG}/JpaServiceLOGS/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>1MB</maxFileSize>
            <totalSizeCap>2GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="JdbcServiceLOGS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${HOME_LOG}/JdbcServiceLOGS.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${HOME_LOG}/${ARCHIVED_LOG}/JdbcServiceLOGS/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>1MB</maxFileSize>
            <totalSizeCap>2GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

